{
  "name": "auth-jwt",
  "version": "0.1.0",
  "description": "A simple MERN stack app to demonstrate signup and login using JWT.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "i-client": "cd client && npm i",
    "i-server": "cd server && npm i",
    "install": "concurrently --kill-others-on-fail \"npm run i-client\" \"npm run i-server\"",
    "client": "cd client && npm start",
    "server": "cd server && npm run dev",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "clean-client": "cd client && npm run clean",
    "clean-server": "cd server && npm run clean",
    "clean": "rm -rf node_modules && rm package-lock.json && npm run clean-client && npm run clean-server"
  },
  "author": "Rishav Agarwal",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "10.0.1",
    "concurrently": "^4.1.1",
    "eslint": "5.16.0",
    "eslint-config-google": "^0.13.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-react-app": "^4.0.1",
    "eslint-plugin-flowtype": "^3.12.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "prettier": "^1.18.2"
  }
}
